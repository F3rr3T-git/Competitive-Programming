#include <bits/stdc++.h>
using namespace std;
 
int main()
{
        int n,k,i,c=0;
        cin >> n >> k;
        int ar[n+1];
        
        for(i=1;i<=n;i++)
        cin >> ar[i];
        
        
        for(i=1;i<=n;i++)
        {
                if(ar[i]>0&&ar[i]>=ar[k])
                c++;
                else
                break;                
        }
        
        cout << c << endl;
                
        return 0;
}
