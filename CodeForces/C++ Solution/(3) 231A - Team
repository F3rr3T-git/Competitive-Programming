#include <bits/stdc++.h>
using namespace std;
 
int main()
{
        int i,n,a,b,c,k=0;
        cin >> n;
        
        for(i=0;i<n;i++)
        {
                cin >> a >> b >> c;
                
                if(a+b+c>=2)
                k++;
        }
        
        cout << k << endl;
        
        return 0;
}
