#include <bits/stdc++.h>
using namespace std;

int main ()
{
    int t;
    cin >> t;

    while(t--)
    {
        int n,i,sm=1;
        cin >> n;

        for(i=0;i<n;i++)
        {
            if(i%2==0)
            sm *=2;
            else
            sm += 1;;
        }

        cout << sm << endl;
    }

    return 0;
}
